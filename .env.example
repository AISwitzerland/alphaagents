# AlphaAgents Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=AlphaAgents
APP_VERSION=1.0.0
NODE_ENV=development

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_optional
OPENAI_DEFAULT_MODEL=gpt-4
OPENAI_VISION_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1
OPENAI_TIMEOUT=60000

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_optional
SUPABASE_STORAGE_BUCKET=documents

# Email Configuration (Optional - for future email agent)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@yourdomain.com

# Agent Configuration
AGENT_DEFAULT_TIMEOUT=30000
AGENT_MAX_RETRIES=3
AGENT_HEALTH_CHECK_INTERVAL=30000

# Security (Optional)
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Swiss Specific
DEFAULT_LANGUAGE=de
SUPPORTED_LANGUAGES=de,fr,it,en
TIMEZONE=Europe/Zurich